{% extends 'base_template.html.twig' %}


{% block content %}
	<main class="content row flex-grow-1">

		<img src="{{ utilisateur.urlImageBaniere}}" alt="bagnede l'utilisateur {{utilisateur.pseudo}}" style=" width :100%;  max-height: 13em;  min-height: 3m;">
		<div class="row mt-3">
			<div class="col-2 ">
				<img src="{{ utilisateur.urlImageProfil}}" alt="imge de profilutilisateur l'utilisateur {{utilisateur.pseudo}}" style=" width :100%; max-width: 10em; max-height: 10em; min-width: 3em; min-height: 3m;" class=" d-block rounded-circle ps-2  m-auto">
			</div>
			<div class=" row row-cols-1 col px-0">
				<h2 class=" mt-auto mb-0 ">{{utilisateur.pseudo}}</h2>
				<h4 class="fw-lighter fst-italic  ">{{utilisateur.nom}}</h4>
			</div>
		</div>


		{% if utilisateurConnecter.getId() == utilisateur.getId() %}
			<div class="row row-cols-3 w-75 mx-auto">
				<div>
					<a href="index.php?controller=utilisateur&methode=show&id_utilisateur={{utilisateur.getId()}}" class="btn btn-primary w-100">A propos</a>
				</div>
				<div>
					<a href="index.php?controller=utilisateur&methode=notification&id_utilisateur={{utilisateur.getId()}}" class="btn btn-primary  w-100">Vos notifications</a>
				</div>
				<div>
					<a href="index.php?controller=utilisateur&methode=edit" class="btn btn-primary  w-100">Modifier mon profil</a>
				</div>
			</div>


		{% endif %}


		<div class="container mt-3 ">
			{% if utilisateurConnecter.getId() == utilisateur.getId()  %}

				<h2 class="ms-5">
					Vos postes
				</h2>
			{% else %}
				<h2 class="ms-5">
					Postes de
					{{utilisateur.pseudo}}
				</h2>
			{% endif %}
			{% if messages is empty %}
				<div class="alert alert-info  ">Aucun poste n'a été trouvé</div>
			{% endif %}


			{% for message in messages %}
				<div class="card my-4 shadow-sm border-0 rounded-3 w-75 mx-auto">
					<div class="card-body p-4 bg-mydark text-white rounded">
						<div class="d-flex align-items-center">
							<img src="{{ utilisateur.urlImageProfil() }}" alt="Avatar" class="rounded-circle me-3" width="50" height="50">
							<div class="d-flex align-items-center">
								<h5 class="mb-0 mx-2">
									<a href="index.php?controller=utilisateur&methode=show&id_utilisateur={{message.getUtilisateur().getId() }}" style="color:white;" class="text-decoration-none">
										{{ utilisateur.pseudo() ?: 'Utilisateur inconnu' }}
									</a>
								</h5>
								<span class="mx-2" style="font-size: 1.2em;">•</span>
								<small>{{ message.dateC | date('d M Y') }}</small>
							</div>
						</div>
						<p class="mt-3">{{ message.valeur }}</p>

					</div>
				</div>

			{% endfor %}
		</div>


	</main>


{% endblock %}
