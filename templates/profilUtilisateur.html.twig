{% extends 'base_template.html.twig' %}


{% block content %}
<main class="content row flex-grow-1">

	<img src= "{{ utilisateur.urlImageBaniere}}" alt="bagnede l'utilisateur {{utilisateur.pseudo}}" style=" width :100%;  max-height: 13em;  min-height: 3m;">
	<div class="row mt-3" >
		<div class="col-2 ">
			<img src= "{{ utilisateur.urlImageProfil}}" alt="imge de profilutilisateur l'utilisateur {{utilisateur.pseudo}}" style=" width :100%; max-width: 10em; max-height: 10em; min-width: 3em; min-height: 3m;" class=" d-block ps-2  m-auto">
		</div>
		<div class=" row row-cols-1 col px-0">
			<h2 class=" mt-auto mb-0 ">{{utilisateur.pseudo}}</h2>
			<h4 class="fw-lighter fst-italic  ">{{utilisateur.nom}}</h4>
		</div>

	<div class=" m-auto">
		<h2> ces poste </h2>
		
		{% for message in messages %}
					<div class="card my-4 shadow-sm border-0 rounded-3">
						<div class="card-body p-4 bg-mydark text-white rounded">
							<div class="d-flex align-items-center">
								<img src="{{ utilisateur.urlImageProfil() }}" alt="Avatar" class="rounded-circle me-3" width="50" height="50">
								<div class="d-flex align-items-center">
									<h5 class="mb-0 mx-2">
										<a href ="index.php?controller=utilisateur&methode=show&id_utilisateur={{message.getUtilisateur().getId() }}" style="color:white;" class="text-decoration-none">
											{{ utilisateur.pseudo() ?: 'Utilisateur inconnu' }}
										</a>
									</h5>
									<span class="mx-2" style="font-size: 1.2em;">•</span>
									<small>{{ message.dateC | date('d M Y') }}</small>
								</div>
							</div>
							<p class="mt-3">{{ message.valeur }}</p>

							<div class="d-flex justify-content-between mt-4">
								<div class="d-flex w-100 mt-4">
									<div class="me-auto">
										<button class="btn btn-sm me-2" style="background-color: #F2F2F2; color: #000;">
											<i class="bi bi-hand-thumbs-up"></i>
											{{ message.nbLikes }}
										</button>
										<button class="btn btn-sm me-2" style="background-color: #F2F2F2; color: #000;">
											<i class="bi bi-hand-thumbs-down"></i>
											{{ message.nbDislikes }}
										</button>
										<button class="btn btn-sm" style="background-color: #F2F2F2; color: #000;">
											<i class="bi bi-reply"></i>
											Répondre
										</button>
									</div>
									<div class="d-flex justify-content-end" style="flex-grow: 1;">
										<button class="btn btn-sm" style="background-color: #dc3545; color: white;">
											<i class="bi bi-flag"></i>
											Signaler
										</button>
									</div>
								</div>
							</div>
						</div>
					</div>

		{% endfor %}
	</div>


</div>




</main> 




{% endblock %}