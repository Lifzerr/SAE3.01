{% extends 'base_template.html.twig' %}


{% block content %}
    
<main class="content row flex-grow-1">
    <form action="index.php?controller=utilisateur&methode=checkInfoConnecter" method="POST" class="text-center col-12 col-md-6 col-lg-4 mx-auto p-4 text-white rounded">
        <img src="{{ constant('WEBSITE_LOGO') }}" height="95" width="155" alt="VHS Logo" class="mx-auto my-2">
        <div class="bg-mydark text-white rounded p-4 mb-5">
            <h3 class="mb-3">Connexion</h3>

            <!-- Champ Email -->
            <div class="form-group mb-3">
                <label for="email" class="d-block text-start mb-0">Mail</label> <!-- Align label à gauche -->
                <input type="email" name="mail" id="email" class="form-control" required>
            </div>

            <!-- Champ Mot de Passe -->
            <div class="form-group mb-4">
                <label for="password" class="d-block text-start mb-0">Mot de passe</label> <!-- Align label à gauche -->
                <input type="password" name="pwd" id="password" class="form-control" required>
                <a href="#" class="text-decoration-underline fw-light text-start text-white">
                    <p>Mot de passe oublié ?</p>
                </a>
            </div>

            <input type="submit" class="btn btn-myprimary my-2 mx-auto" value="Se connecter">
        </div>
    </form>

    <a href="index.php?controller=utilisateur&methode=inscription" class="text-white text-decoration-none mt-2">Créer un compte</a>
</main>


{% endblock %}