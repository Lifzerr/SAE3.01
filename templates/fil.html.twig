{% extends 'base_template.html.twig' %}

{% block content %}
	<!-- En-tête du fil avec bordure supérieure orange -->
	<div class="container-fluid bg-mydark text-white p-4 shadow mb-5" style="border-top: 5px solid #F2AC0F;">
		<div class="text-center">
			<h2 class="mb-3">{{ fil.titre }}</h2>
			<p class="">{{ fil.description }}</p>
		</div>
	</div>

	<!-- Contenu principal avec les messages -->
	<div class="container">
		{% for message in messages %}
			<div class="card my-4 shadow-sm border-0 rounded-3">
				<div class="card-body p-4 bg-mydark text-white rounded">
					<div class="d-flex align-items-center">
						<img src="{{ message.getUser().urlImageProfil }}" alt="Avatar" class="rounded-circle me-3" width="50" height="50">
						<div class="d-flex align-items-center">
							<h5 class="mb-0 mx-2">{{ message.getUser() ? message.getUser().pseudo : 'Utilisateur inconnu' }}</h5>
							<span class="mx-2 " style="font-size: 1.2em;">•</span>
							<!-- Légèrement agrandi pour une meilleure visibilité -->
							<small class="">{{ message.datePublication | date('d M Y') }}</small>
						</div>
					</div>
					<p class="mt-3">{{ message.valeur }}</p>
					<div class="d-flex justify-content-between mt-4">
						<div>
							<button class="btn btn-outline-light btn-sm me-2">
								<i class="bi bi-hand-thumbs-up"></i>
							</button>
							<button class="btn btn-outline-light btn-sm me-2">
								<i class="bi bi-hand-thumbs-down"></i>
							</button>
							<button class="btn btn-outline-light btn-sm">
								<i class="bi bi-reply"></i>
								Répondre</button>
						</div>
						<button class="btn btn-danger btn-sm">
							<i class="bi bi-flag"></i>
							Signaler</button>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
